{
  "name": "employee-monitoring-client",
  "version": "1.0.0",
  "description": "Desktop client for Employee Monitoring System",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron .",
    "build": "tsc && electron-builder",
    "build:win": "electron-builder --win",
    "build:msi": "electron-builder --win --x64 msi",
    "pack": "electron-builder --dir",
    "test": "jest"
  },
  "build": {
    "appId": "com.company.employee-monitoring",
    "productName": "Employee Monitoring System",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "msi",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Your Company Name",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/installer-icon.ico",
      "uninstallerIcon": "assets/uninstaller-icon.ico"
    },
    "msi": {
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "warningsAsErrors": false
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "active-win": "^7.8.2",
    "electron-store": "^8.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.2",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "keywords": [
    "employee-monitoring",
    "screenshot",
    "tracking",
    "productivity"
  ],
  "author": "Your Company",
  "license": "PROPRIETARY"
}
